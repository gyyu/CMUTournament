<div class="new-team">
<%= form_tag "/teams", :method => "post" do %>
  <% if @team.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@team.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
      <% @team.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, "", :name => "team[name]", :class => "form-control"%>
  </div>
  <div class="form-group">
    <%= label_tag :school %>
    <%= text_field_tag :school, "", :name => "team[school]", :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag "First Teammate" %>
    <%if @free_users.nil? || @free_users.empty? || @free_users.blank?%>
    <%else%>
    <%= select_tag  "teammate1", options_from_collection_for_select(@free_users, "id", "name"), :class => "form-control" %>
    <%end%>
  </div>
  <div class="form-group">
    <%= label_tag "Second Teammate" %>
    <%if @free_users.nil? || @free_users.empty? || @free_users.blank?%>
    <%else%>
    <%= select_tag  "teammate2", options_from_collection_for_select(@free_users, "id", "name"), :class => "form-control" %>
    <%end%>
  </div>
  <div class="form-group">
    <%= submit_tag "Create", :class => "btn btn-primary" %>
  </div>
<% end %>

</div>