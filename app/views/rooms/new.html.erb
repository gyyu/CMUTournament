  <h1>New Room</h1>
<%= form_for(@room) do |f| %>
  <% if @room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@room.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <div style="font-weight:bold;">
      Currernt Rooms:
    </div>
    <%@rooms.try(:each) do |c|%>
      <div><%=c.room_name%></div>
    <%end%>
  </div>

  </br>

  <div class="form-group">
    <%=f.label :room_name%>
    <%= f.text_field :room_name, :class => "form-control", :placeholder => "PH 100"%>
