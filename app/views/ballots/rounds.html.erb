<%= javascript_include_tag 'rounds.js'%>
<h1>Rounds</h1>
<div class="tabbable">
  <ul class="nav nav-tabs">
    <%@rounds.each do |round_number, round|%>
      <li id="#tab<%=round_number%>" class=<%='active' if round_number == 1%>>
        <a data-toggle="tab">Round <%=round_number%></a>
      </li>
    <%end%>
  </ul>
  <div class="tab-content">
    <%@rounds.each do |round_number, round|%>
      <div id="tab<%=round_number%>" class="tab-pane <%='active' if round_number == 1%>">
        <table class="table">
          <thead>
            <tr>
              <th>Gov</th>
              <th>Opp</th>
              <th>Judge</th>
              <th>Room</th>
            </tr>
          </thead>
          <tbody>
            <%round.each do |b|%>
              <tr>
                <td><%=b.gov.name%></td>
                <td><%=b.opp.name%></td>
                <td><%=b.judge.name%></td>
                <td><%=b.room%></td>
              </tr>
            <%end%>
          </tbody>
        </table>
      </div>
    <%end%>
  </div>
</li>